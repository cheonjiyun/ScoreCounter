<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:contentDescription="@string/reset_button"
        android:id="@+id/reset_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:src="@drawable/reset_button"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_myeongjo"
        android:text="@string/title1_question"
        android:textColor="@color/main_text"
        android:textSize="20sp"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="0.5"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/question_editText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nanum_myeongjo_extra_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="6"
            android:selectAllOnFocus="true"
            android:textColor="@color/main_text"
            android:textColorHighlight="@color/tint"
            android:textSize="24sp"
            android:hint="문제수"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/nanum_myeongjo_extra_bold"
            android:text="@string/unit1_question"
            android:textColor="@color/main_text"
            android:textSize="20sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_myeongjo"
        android:text="@string/title2_count"
        android:textColor="@color/main_text"
        android:textSize="20sp"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/minus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:contentDescription="@string/minus_button"
            android:fontFamily="@font/nanum_myeongjo_extra_bold"
            android:text="-"
            android:textColor="@color/button_text"
            android:textSize="48sp"
            android:layout_weight="1"/>

        <TextView
        android:id="@+id/correctCount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2222"
        android:textSize="36sp"
        android:textColor="@color/main_text"
        android:fontFamily="@font/nanum_myeongjo_extra_bold"
        android:gravity="center"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/plus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:contentDescription="@string/plus_button"
            android:fontFamily="@font/nanum_myeongjo_extra_bold"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/button_text"
            android:textSize="48sp"
            android:layout_weight="1"/>

    </LinearLayout>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_myeongjo"
        android:text="@string/title3_score"
        android:textColor="@color/main_text"
        android:textSize="20sp"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top|center_horizontal"
        android:layout_weight="2"
        >
        <TextView
            android:id="@+id/score_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_myeongjo_extra_bold"
            android:gravity="right"
            android:text="100"
            android:textColor="@color/main_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_myeongjo_extra_bold"
            android:text="@string/unit2_score"
            android:textColor="@color/main_text"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>